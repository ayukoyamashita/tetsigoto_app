<!DOCTYPE html>
<html>
<head>
	<title>SOL STAMP</title>
	<%= csrf_meta_tags %>
	<%= csp_meta_tag %>

	<%= stylesheet_pack_tag 'application-user', 'data-turbolinks-track': 'reload' %>
	<%= javascript_pack_tag 'application-user', 'data-turbolinks-track': 'reload' %>

	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width,initial-scale=1">
</head>

<body>
<header class="header">
	<h1><a href="/">SOL STAMP</a></h1>
	<div id="nav-drawer">
		<input id="nav-input" type="checkbox" class="nav-unshown">
		<label id="nav-open" for="nav-input"><span></span></label>
		<label class="nav-unshown nav-close-bg" for="nav-input"></label>
		<nav id="nav-content">
			<label class="nav-close" for="nav-input">×</label>
			<ul>
				<li><%= link_to 'スタンプカード', users_stamp_cards_path %></li>
				<li><%= link_to 'アカウント編集', edit_user_registration_path %></li>
				<li><%= link_to 'ログアウト', destroy_user_session_path, method: :delete %></li>
			</ul>
		</nav>
	</div>
</header>
<div class="container">
	<%- if notice.present? %>
		<p class="cmn-notice"><%= notice %></p>
	<%- end %>
	<%- if alert.present? %>
		<p class="cmn-alert"><%= alert %></p>
	<%- end %>
	<%= yield %>
</div>
<%= render 'users/shared/qr_readed_dialog' %>
<footer class="footer">
	<%- if !(controller_name == 'stamp_card' && action_name == 'detail') %>
		<label class="footer_camera" data-camera="true">
			<i class="fas fa-camera"></i>
			<input type="file" accept="image/*" capture="environment" data-camera="true">
			<input type="hidden" data-qr-decord="true">
		</label>
	<%- end %>

	SOL STAMP
</footer>
</body>
</html>
