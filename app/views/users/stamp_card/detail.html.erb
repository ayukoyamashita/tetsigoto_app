<div class="stampCard">
	<p class="stampCard_mainImage">
		<img src="https://placehold.jp/600x400.png">
	</p>
	<h2><%= @stamp_card.name %></h2>
	<p><%= @stamp_card.description %></p>

	<h3>開催期間</h3>
	<p><%= l @stamp_card.start_at %>〜<%= l @stamp_card.end_at %></p>

	<label class="cmn-camera mgt-30">
		<i class="fas fa-camera"></i> QRコードを読む
		<input type="file" accept="image/*" capture="environment" data-camera="true">
	</label>

	<ul class="stampCard_card mgt-30" id="stampCard">
		<%- (0..@stamp_card.count - 1).each do |i| %>
			<%- if @stamps[i].present? %>
				<li class="is-stamped">
					<%= image_tag asset_path 'miffy.png' %>
					<p class="stampCard_card_date"><%= l(@stamps[i].created_at.to_date, format: :short) %></p>
				</li>
			<%- else %>
				<li><%= image_tag asset_path 'miffy.png' %></li>
			<%- end %>
		<%- end %>
	</ul>
</div>